#!/bin/bash

SOURCE=$1
USER=$2
SERVER=$3
REMOTE_PATH=$4
BUILD_NUMBER=$5

echo "Deploying $SOURCE to $USER@$SERVER:$REMOTE_PATH"

rsync -avz $SOURCE $USER@$SERVER:$REMOTE_PATH

ssh $USER@$SERVER <<EOF
    cd $REMOTE_PATH
    mkdir -p "release-$BUILD_NUMBER"
    cd release-$BUILD_NUMBER
    tar xfz ../$SOURCE
    cd ..
    cp -R parameters.yml "release-$BUILD_NUMBER/app/config"
    cd release-$BUILD_NUMBER
    bin/console cache:clear --env=prod
    bin/console doctrine:schema:update -f
    chmod -R 777 var/
    cd ..
    ln -nfs "release-$BUILD_NUMBER" release
    rm ./$SOURCE
EOF
