{% extends "CalendarBundle::base.html.twig" %}

{% block body %}
    <div class="calendar">
        <div class="left">
            <div class="month-view">
                <div class="month-view__controls">
                    <div class="month-controls">
                        <a href="#" class="btn btn-default previous-month">&larr;</a>
                        <span class="month"></span>
                        <a href="#" class="btn btn-default next-month">&rarr;</a>
                    </div>

                    <div class="year-controls">
                        <a href="#" class="btn btn-default previous-year">&larr;</a>
                        <span class="year"></span>
                        <a href="#" class="btn btn-default next-year">&rarr;</a>
                    </div>
                </div>

                <div class="month-view__grid"></div>

                <div class="month-view__skip">
                    <a href="#" class="btn btn-default previous-day">
                        Previous
                    </a>

                    <a href="#" class="btn btn-default today">
                        Today
                    </a>

                    <a href="#" class="btn btn-default next-day">
                        Next
                    </a>
                </div>
            </div>

            <div class="notes">
                <button class="btn btn-default add-note"><i class="fa fa-sticky-note fa-fw"></i>Add a Note</button>
            </div>
        </div>

        <div class="right">
            <div class="today-view">
                <div class="today-view__appointments">
                    <div class="appointment" style="top: 450px; height: 220px; background: red; border-color: red;">
                        <strong>Eat some chocolate</strong>

                        <time>07:30 - 11:10</time>
                    </div>
                    <div class="appointment" style="top: 840px; height: 120px;">
                        <strong>NOW HAVE SOME CAKE</strong>

                        <time>14:00 - 16:00</time>
                    </div>

                    <div class="appointment" style="top: 720px; height: 30px; background: purple; border-color: purple;">
                        <strong>Lunch!</strong>

                        <time>12:00 - 12:30</time>
                    </div>

                    <div class="appointment" style="top: 1260px; height: 60px; background: blue; border-color: blue">
                        <strong>VIDEO GAMES</strong>

                        <time>21:00 - 22:00</time>
                    </div>
                </div>

                <table class="today-view__grid">
                    {% for i in 0..23 %}
                        <tr class="time-slot">
                            <td class="time">
                                {{ "%02d:00"|format(i) }}
                            </td>

                            <td></td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}
