{% extends "CalendarBundle::base.html.twig" %}

{% block body %}
    <div class="calendar">
        <div class="left">
            <div class="month-view">
                <div class="month-view__controls">
                    <div class="month-controls">
                        <a href="#" class="btn btn-default previous-month">&larr;</a>
                        <span class="month">October</span>
                        <a href="#" class="btn btn-default next-month">&rarr;</a>
                    </div>

                    <div class="year-controls">
                        <a href="#" class="btn btn-default previous-year">&larr;</a>
                        <span class="year">2016</span>
                        <a href="#" class="btn btn-default next-year">&rarr;</a>
                    </div>
                </div>

                <table>
                    <tr class="days">
                        <th>Mon</th>
                        <th>Tue</th>
                        <th>Wed</th>
                        <th>Thu</th>
                        <th>Fri</th>
                        <th>Sat</th>
                        <th>Sun</th>
                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td>1</td>
                        <td>2</td>
                    </tr>
                    <tr>
                        <td>3</td>
                        <td>4</td>
                        <td>5</td>
                        <td>6</td>
                        <td>7</td>
                        <td>8</td>
                        <td class="has-appointments">9</td>
                    </tr>
                    <tr>
                        <td>10</td>
                        <td>11</td>
                        <td>12</td>
                        <td>13</td>
                        <td>14</td>
                        <td>15</td>
                        <td>16</td>
                    </tr>
                    <tr>
                        <td class="has-appointments">17</td>
                        <td>18</td>
                        <td>19</td>
                        <td>20</td>
                        <td>21</td>
                        <td>22</td>
                        <td>23</td>
                    </tr>
                    <tr>
                        <td>24</td>
                        <td>25</td>
                        <td>26</td>
                        <td>27</td>
                        <td>28</td>
                        <td>29</td>
                        <td>30</td>
                    </tr>
                    <tr>
                        <td>31</td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                </table>

                <div class="month-view__skip">
                    <a href="#" class="btn btn-default">
                        Previous
                    </a>

                    <a href="#" class="btn btn-default">
                        Today
                    </a>

                    <a href="#" class="btn btn-default">
                        Next
                    </a>
                </div>
            </div>

            <div class="notes">
                <button class="btn btn-default add-note"><i class="fa fa-sticky-note fa-fw"></i>Add a Note</button>
            </div>
        </div>

        <div class="right">
            <div class="today-view">
                <table>
                {% for i in 0..23 %}
                    <tr class="time-slot">
                        <td class="time">
                            {{ "%02d:00"|format(i) }}
                        </td>

                        <td>
                        </td>
                    </tr>
                {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}
