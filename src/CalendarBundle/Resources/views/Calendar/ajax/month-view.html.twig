<table>
    <tr class="days">
        <th>Mon</th>
        <th>Tue</th>
        <th>Wed</th>
        <th>Thu</th>
        <th>Fri</th>
        <th>Sat</th>
        <th>Sun</th>
    </tr>

    {% set totalDays = 0 %}

    {% for week in 0..5 %}
        <tr>
            {% for day in 1..7 %}
                {% if days[totalDays] is defined and days[totalDays]|length > 0 %}
                    {% set monthDay = days[totalDays]["num"] %}
                    {% set hasEvents = days[totalDays]["hasEvents"] %}

                    <td>
                        <a href="#" class="day {% if hasEvents %}day--has-appointments{% endif %}" data-day="{{ monthDay }}">{{ monthDay }}</a>
                    </td>
                {% else %}
                    {# padding table cell #}
                    <td></td>
                {% endif %}

                {% set totalDays = totalDays + 1 %}
            {% endfor %}
        </tr>
    {% endfor %}
</table>
